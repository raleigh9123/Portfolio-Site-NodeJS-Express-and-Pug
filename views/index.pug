extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Portfolio
      p.lead.text-light
        | This portfolio showcases my own web development projects, with a front-end object-oriented browser-based game and a random user directory generated via a public API. This portfolio itself is a live demo of a website built in Express and Node.js!
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            if project.image_urls[0].landing
              img.thumbnail(src=project.image_urls[0].url)
            h5=project.project_name
